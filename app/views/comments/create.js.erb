$('.comment-errors').html('<%= render 'shared/errors', resource: @comment %>')
$('.notice').html('<%= notice %>')
$('.alert').html('<%= alert %>')
<% if @comment.persisted? %>
  $('.<%= @comment.commentable.class.name.downcase %>-<%= @comment.commentable.id %>').find('.comments').append('<%= j render @comment %>')
  $('form').find('#comment_body').val('')
<% end %>